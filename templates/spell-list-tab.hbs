<div class="spell-list-tab">
  {{#*inline "list" }}{{#if this}}
    <h3 class="form-header">{{localize label}}</h3>
    <div>
      <div class="form-group stacked spell-list-properties">
        {{#each lists}}
        <label class="checkbox">
          <input type="checkbox"
            name="{{concat 'flags.spell-list.' @key}}"
            {{ checked (lookup @root.data @key) }}
          />
          {{localize label}}
        </label>
        {{/each}}
      </div>
    </div>
  {{/if}}{{/inline}}

  {{#each section}}
    {{> list this}}
  {{/each}}
</div>
